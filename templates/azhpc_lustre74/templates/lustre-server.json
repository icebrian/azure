{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "nodeCount": {
      "type": "int",
      "metadata": {
        "description": "Number of lustre nodes (100 or less)."
      },
      "defaultValue": 1,
      "minValue": 1,
      "maxValue": 1000

    },
    "VMSize": {
      "type": "string",
      "defaultValue": "Standard_DS3_v2",
      "allowedValues": [
        "Standard_DS1",
        "Standard_DS2",
        "Standard_DS3",
        "Standard_DS4",
        "Standard_DS11",
        "Standard_DS12",
        "Standard_DS13",
        "Standard_DS14",
        "Standard_DS1_v2",
        "Standard_DS2_v2",
        "Standard_DS3_v2",
        "Standard_DS4_v2",
        "Standard_DS5_v2",
        "Standard_DS11_v2",
        "Standard_DS12_v2",
        "Standard_DS13_v2",
        "Standard_DS14_v2",
        "Standard_DS15_v2",
        "Standard_F1s",
        "Standard_F2s",
        "Standard_F4s",
        "Standard_F8s",
        "Standard_F16s",
        "Standard_GS1",
        "Standard_GS2",
        "Standard_GS3",
        "Standard_GS4",
        "Standard_GS5",
        "Standard_L4s",
        "Standard_L8s",
        "Standard_L16s",
        "Standard_L32s"
      ],
      "metadata": {
        "description": "sku to use for the storage nodes - only premium disks VMs are allowed"
      }
    },
    "clientId": {
      "type": "string",
      "metadata": {
        "description": "ClientId for az login."
      }
    },
    "clientSecret": {
      "type": "securestring",
      "metadata": {
        "description": "ClientSecret for az login."
      }
    },
    "tenantId": {
      "type": "string",
      "metadata": {
        "description": "tenantId for az login."
      }
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Admin username on all VMs."
      }
    },
    "sshKeyData": {
      "type": "string",
      "metadata": {
        "description": "SSH rsa public key file as a string."
      }
    },
    "vnetname": {
      "type": "string",
      "metadata": {
        "description": "Virtual Network name"
      }
    },
    "storageDiskSize": {
      "type": "string",
      "defaultValue": "P10",
      "allowedValues": [
        "P10",
        "P20",
        "P30",
        "P40",
        "P50"
      ],
      "metadata": {
        "description": "Premium storage disk size used for the storage services"
      }
    },
    "StorageDisksCount": {
      "type": "int",
      "defaultValue": 1,
      "minValue": 0,
      "maxValue": 63,
      "metadata": {
        "description": "Number of storage disks"
      }
    }
  },
  "variables": {
    "myTemplateLink": "https://raw.githubusercontent.com/tanewill/azhpc_lustre/master/",
    "virtualNetworkName": "[parameters('vnetname')]",
    "vmssNameVolume": "[concat(variables('vmssName'), 'last')]",
    "addressPrefix": "10.36.0.0/16",
    "subnetPrefix": "10.36.0.0/24",
    "subnetPrefix2": "10.36.1.0/24",
    "subnetName": "lustre-subnet",
    "subnetName2": "compute-subnet",
    "vmssName": "ossserver",
    "mgsNodeName": "mgsmdt000000",
    "nodeCount": "[parameters('nodeCount')]",
    "resourceGroup": "[resourceGroup().name]",
    "clientId": "[parameters('clientId')]",
    "clientSecret": "[parameters('clientSecret')]",
    "tenantId": "[parameters('tenantId')]",
    "storageDiskSize": "[variables('PremiumStorageMap')[parameters('storageDiskSize')].size]",
    "numStorageDisks": "[parameters('storageDisksCount')]",
    "numMetadataDisks": 0,
    "nicName": "[concat(variables('vmssName'), 'nic')]",
    "ipConfigName": "[concat(variables('vmssName'), 'ipconfig')]",
    "networkApiVersion": "2016-06-01",
    "insightsApiVersion": "2015-04-01",
    "location": "[resourceGroup().location]",
    "PremiumStorageMap": {
      "P10": {
        "size": 128
      },
      "P20": {
        "size": 512
      },
      "P30": {
        "size": 1023
      },
      "P40": {
        "size": 2047
      },
      "P50": {
        "size": 4094
      }
    },
    "image": "RHEL_7.4",
    "lustreNodeSettings": {
      "VMsku": "[parameters('VMSize')]",
      "storageDiskSize": "[variables('PremiumStorageMap')[parameters('storageDiskSize')].size]",
      "numStorageDisks": "[parameters('storageDisksCount')]",
      "numStorageDisksLast": 1,
      "numMetadataDisks": 0
    },
    "computeNodeImages": {
      "CentOS_7.2": {
        "publisher": "OpenLogic",
        "offer": "CentOS",
        "sku": "7.2",
        "version": "latest"
      },
      "CentOS_7.3": {
        "publisher": "OpenLogic",
        "offer": "CentOS",
        "sku": "7.3",
        "version": "latest"
      },
      "RHEL_7.2": {
        "publisher": "RedHat",
        "offer": "RHEL",
        "sku": "7.2",
        "version": "latest"
      },
      "CentOS_7.4": {
        "publisher": "OpenLogic",
        "offer": "CentOS",
        "sku": "7.4",
        "version": "latest"
      },
      "RHEL_7.4": {
        "publisher": "RedHat",
        "offer": "RHEL",
        "sku": "7-RAW",
        "version": "latest"
      }
    },
    "nodeOSSettings": {
      "adminUserName": "[parameters('adminUserName')]",
      "sshKeyData": "[parameters('sshKeyData')]",
      "imageReference": "[variables('computeNodeImages')[variables('image')]]"
    },
    "computeApiVersion": "2016-04-30-preview",
    "sshKeyPath": "[concat('/home/',variables('nodeOSSettings').adminUserName,'/.ssh/authorized_keys')]",
    "lustreInstall": "[concat('bash install_lustre.sh ', 'lustre000000', ' client')]",
    "storageDiskArray": [
      {
        "diskSizeGB": "[variables('lustreNodeSettings').storageDiskSize]",
        "lun": "0",
        "createOption": "Empty"
      },
      {
        "diskSizeGB": "[variables('lustreNodeSettings').storageDiskSize]",
        "lun": "1",
        "createOption": "Empty"
      },
      {
        "diskSizeGB": "[variables('lustreNodeSettings').storageDiskSize]",
        "lun": "2",
        "createOption": "Empty"
      },
      {
        "diskSizeGB": "[variables('lustreNodeSettings').storageDiskSize]",
        "lun": "3",
        "createOption": "Empty"
      },
      {
        "diskSizeGB": "[variables('lustreNodeSettings').storageDiskSize]",
        "lun": "4",
        "createOption": "Empty"
      },
      {
        "diskSizeGB": "[variables('lustreNodeSettings').storageDiskSize]",
        "lun": "5",
        "createOption": "Empty"
      },
      {
        "diskSizeGB": "[variables('lustreNodeSettings').storageDiskSize]",
        "lun": "6",
        "createOption": "Empty"
      },
      {
        "diskSizeGB": "[variables('lustreNodeSettings').storageDiskSize]",
        "lun": "7",
        "createOption": "Empty"
      },
      {
        "diskSizeGB": "[variables('lustreNodeSettings').storageDiskSize]",
        "lun": "8",
        "createOption": "Empty"
      },
      {
        "diskSizeGB": "[variables('lustreNodeSettings').storageDiskSize]",
        "lun": "9",
        "createOption": "Empty"
      }
    ]
  },
  "resources": [
    { "type": "Microsoft.Network/virtualNetworks",
      "name": "[variables('virtualNetworkName')]",
      "location": "[variables('location')]",
      "apiVersion": "[variables('networkApiVersion')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('addressPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('subnetName')]",
            "properties": {
              "addressPrefix": "[variables('subnetPrefix')]"
            }
          },
          {
            "name": "[variables('subnetName2')]",
            "properties": {
              "addressPrefix": "[variables('subnetPrefix2')]"
            }
          }
        ]
      }
    },  
    { "type": "Microsoft.Compute/virtualMachineScaleSets",
      "name": "[variables('vmssName')]",
      "location": "[variables('location')]",
      "apiVersion": "[variables('computeApiVersion')]",
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworks/', variables('virtualNetworkName'))]"
      ],
      "sku": {
        "name": "[variables('lustreNodeSettings').VMsku]",
        "tier": "Standard",
        "capacity": "[parameters('nodeCount')]"
      },
      "properties": {
        "overprovision": "false",
        "upgradePolicy": {
          "mode": "Manual"
        },
        "virtualMachineProfile": {
          "storageProfile": {
            "osDisk": {
              "createOption": "FromImage",
              "managedDisk": {
                "storageAccountType": "Premium_LRS"
              }
            },
            "imageReference": "[variables('nodeOSSettings').imageReference]",
            "dataDisks": "[concat(take(variables('storageDiskArray'), parameters('storageDisksCount')))]"
          },
          "osProfile": {
            "computerNamePrefix": "[variables('vmssName')]",
            "adminUsername": "[parameters('adminUsername')]",
            "linuxConfiguration": {
              "disablePasswordAuthentication": "true",
              "ssh": {
                "publicKeys": [
                  {
                    "path": "[variables('sshKeyPath')]",
                    "keyData": "[variables('nodeOSSettings').sshKeyData]"
                  }
                ]
              }
            }
          },
          "networkProfile": {
            "networkInterfaceConfigurations": [
              {
                "name": "[variables('nicName')]",
                "properties": {
                  "primary": "true",
                  "ipConfigurations": [
                    {
                      "name": "[variables('ipConfigName')]",
                      "properties": {
                        "subnet": {
                          "id": "[concat('/subscriptions/', subscription().subscriptionId,'/resourceGroups/', resourceGroup().name, '/providers/Microsoft.Network/virtualNetworks/', variables('virtualNetworkName'), '/subnets/', variables('subnetName'))]"
                        }
                      }
                    }
                  ]
                }
              }
            ]
          },
          "extensionProfile": {
            "extensions": [
              {
                "name": "lapextension",
                "properties": {
                  "publisher": "Microsoft.Azure.Extensions",
                  "type": "CustomScript",
                  "typeHandlerVersion": "2.0",
                  "autoUpgradeMinorVersion": true,
                  "settings": {
                    "fileUris": [
                      "[concat(variables('myTemplateLink'),  'scripts/install_lustre_storage.sh')]"                      
                    ],
                    "commandToExecute": "[concat('bash install_lustre_storage.sh ',variables('mgsNodeName'),' ','https://raw.githubusercontent.com/tanewill/azhpc_lustre/master/scripts',' ',variables('vmssName'),' ',variables('resourceGroup'),' ',variables('clientId'),' ',variables('clientSecret'),' ',variables('tenantId'),' ',variables('nodeCount'))]"
                  }
                }
              }
            ]
          }
        }
      }
    }

  ]
}